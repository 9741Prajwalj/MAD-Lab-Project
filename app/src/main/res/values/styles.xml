<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MadLabProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/gray_500</item>
        <!-- Status bar color -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Add these Material text appearances -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MadLabProject.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MadLabProject.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MadLabProject.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.MadLabProject.Button</item>
    </style>

    <!-- Text appearance styles -->
    <style name="TextAppearance.MadLabProject.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.MadLabProject.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.MadLabProject.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.MadLabProject.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Your custom text appearances -->
    <style name="TextAppearance.Regular" parent="TextAppearance.MadLabProject.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.Bold" parent="TextAppearance.MadLabProject.Headline6">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Text input style -->
    <style name="ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.OutlinedBox" parent="">
        <item name="cornerSize">8dp</item>
    </style>
</resources>